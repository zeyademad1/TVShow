<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@drawable/tab_back"
        app:tabContentStart="@dimen/_15sdp"
        app:tabIndicator="@color/colorPrimary"
        app:tabIndicatorAnimationDuration="@integer/material_motion_duration_long_1"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorGravity="center"
        app:tabIndicatorHeight="@dimen/_10sdp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/colorTextOther"
        app:tabTextColor="@color/white"
        app:tabUnboundedRipple="true">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_back"
            android:text="Monday" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_back"

            android:text="Tuesday" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_back"
            android:text="Wednesday" />
    </com.google.android.material.tabs.TabLayout>
</LinearLayout>